{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "author": {
        "ClusterId": "author",
        "Match": {
          "Hosts": ["localhost:5134"]
        }
      },
      "pulls": {
        "ClusterId": "pulls",
        "Match": {
          "Hosts": ["localhost:5135"]
        }
      },
      "default": {
        "ClusterId": "default",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "author": {
        "Destinations": {
          "api-backend": {
            "Address": "https://github.com/yoshinorin"
          }
        }
      },
      "pulls": {
        "Destinations": {
          "web-backend": {
            "Address": "https://github.com/yoshinorin/Buzzard/pulls"
          }
        }
      },
      "default": {
        "Destinations": {
          "default-backend": {
            "Address": "https://github.com/yoshinorin/Buzzard"
          }
        }
      }
    }
  },
  "Firewall": {
    "BlockedPaths": [
      "/admin",
      "/internal"
    ]
  }
}
