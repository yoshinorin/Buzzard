{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "localhost1": {
        "ClusterId": "localhost1",
        "Match": {
          "Hosts": ["localhost:5134"]
        }
      },
      "localhost2": {
        "ClusterId": "localhost2",
        "Match": {
          "Hosts": ["localhost:5135"]
        }
      }
    },
    "Clusters": {
      "localhost1": {
        "Destinations": {
          "front": {
            "Address": "http://host.docker.internal:3000/"
          }
        }
      },
      "localhost2": {
        "Destinations": {
          "backend": {
            "Address": "http://host.docker.internal:9001/"
          }
        }
      }
    }
  },
  "Firewall": {
    "Path": {
      "Allow": {
        "Contains": [
          "/status"
        ],
        "StartsWith": [
          "/api/public"
        ],
        "EndsWith": [
          ".css",
          ".js",
          ".png",
          ".ico"
        ]
      },
      "Deny": {
        "Contains": [
          "/admin",
          "/config",
          ".git",
          "../",
          "/.env"
        ],
        "StartsWith": [
          "/private/"
        ],
        "EndsWith": [
          ".bak",
          ".tmp",
          ".log"
        ]
      }
    },
    "UserAgent": {
      "Deny": {
        "Contains": [
          "bot"
        ],
        "StartsWith": [
          "evil/"
        ],
        "EndsWith": [
          "bad"
        ]
      }
    }
  }
}
